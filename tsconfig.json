{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "rootDir": "src",
    "outDir": "./dist",

    // Needed for correct imports/exports
    "esModuleInterop": true,

    // Strict type checking
    "strict": true,

    // Skip checking .d.ts from node_modules for faster builds
    "skipLibCheck": true,

    // Avoid case-sensitivity issues on Windows
    "forceConsistentCasingInFileNames": true,

    // âœ… CRITICAL: Enable Node.js globals (process, Buffer, path, http, etc.)
    "types": ["node"],

    // ðŸ‘‡ Custom global type definitions (Express augmentation)
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },

  // ðŸ‘‡ Scan ONLY source files
  "include": [
    "src"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
